# HealthIT Environment Configuration
# Copy this file to `.env` and fill in your real values

# Email configuration (required only if HEALTHIT_SEND_EMAIL=true)
HEALTHIT_SENDER_EMAIL=your_email@gmail.com
HEALTHIT_RECEIVER_EMAIL=your_email@gmail.com
HEALTHIT_GMAIL_APP_PASSWORD=your_app_password_here

# Feature flags
HEALTHIT_SEND_EMAIL=false

# Logging
HEALTHIT_LOG_FILE=logs/healthit_systemlog.csv

# Disk path override (optional)
# Windows example: C:\
# Linux/macOS example: /
# HEALTHIT_DISK_PATH=C:\
